<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardsActivity">


    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"


        ></androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your Card"
        android:layout_below="@id/toolbar"
        android:id="@+id/choose_card_text"
        android:gravity="start"
        android:layout_marginHorizontal="10dp"
        android:textSize="18dp"
        android:textColor="@color/blue"
        android:layout_marginVertical="5dp"
        />

    <HorizontalScrollView
        android:id="@+id/hsc_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_card_text"
        android:layout_alignParentLeft="true"

        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="5dp"
        android:paddingVertical="15dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"


            >

            <androidx.cardview.widget.CardView
                style="@style/CardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:dividerHeight="0.0px"
                app:cardCornerRadius="18dp"


                app:cardElevation="20dp"
                app:cardPreventCornerOverlap="false"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_credit_card_1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="10dp"
                    android:paddingLeft="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="180dp"
                            android:text="Master Card"
                            android:textColor="#8CFFFFFF"
                            android:textSize="16dp"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_mastercard_logo"
                            android:gravity="right" />


                    </LinearLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:gravity="top"
                        android:letterSpacing="0.14"
                        android:lineSpacingExtra="0sp"
                        android:text="4225 9764 3030 3030"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="150dp"
                            android:gravity="bottom"
                            android:text="Arun Mehta"
                            android:textColor="#BAFFFFFF"
                            android:textSize="18dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_qr_card"
                            android:gravity="right" />
                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:dividerHeight="0.0px"

                app:cardCornerRadius="18dp"
                app:cardElevation="20dp"

                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_credit_card2"
                    android:orientation="vertical"
                    android:paddingVertical="10dp"
                    android:paddingLeft="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="240dp"
                            android:text="Visa"
                            android:textColor="#8CFFFFFF"
                            android:textSize="16dp"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_visa_logo"
                            android:gravity="right" />


                    </LinearLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:gravity="top"
                        android:letterSpacing="0.14"
                        android:lineSpacingExtra="0sp"
                        android:text="3225 9764 3030 3030"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="150dp"
                            android:gravity="bottom"
                            android:text="Arun Mehta"
                            android:textColor="#BAFFFFFF"
                            android:textSize="18dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_qr_card"
                            android:gravity="right" />
                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </HorizontalScrollView>


    <TextView
        android:id="@+id/add_new_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hsc_cards"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="0sp"
        android:text="Add New Card"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_new_text">

    <LinearLayout
        android:id="@+id/add_new_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="left"
            android:lineSpacingExtra="0sp"
            android:text="Enter Card No."
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText

            android:id="@+id/cardnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_text"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edit_text_background1"
            android:drawableRight="@drawable/ic_mastercard_logo"
            android:hint="453887290019"
            android:padding="15dp"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="left"
                android:lineSpacingExtra="0sp"
                android:text="Expiry"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:lineSpacingExtra="0sp"
                android:text="CVV"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="20dp">

            <EditText

                android:id="@+id/expiry_card"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_text"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edit_text_background1"
                android:hint="23/2018"
                android:padding="15dp"

                android:textSize="20dp" />

            <EditText

                android:id="@+id/cvv_card"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_text"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edit_text_background1"
                android:hint="000"
                android:padding="15dp"

                android:textSize="20dp" />

        </LinearLayout>


        <Button
            android:id="@+id/proceedtopay_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_new_ll"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"

            android:layout_alignParentBottom="true"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_bluebutton_background"
            android:layout_marginHorizontal="25dp"

            android:paddingVertical="15dp"
            android:text="Proceed to Pay"
            android:textAllCaps="false"
            android:textColor="@color/white"

            android:textSize="16dp" />
    </LinearLayout>
    </ScrollView>




</RelativeLayout>